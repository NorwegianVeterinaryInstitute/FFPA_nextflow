manifest {
    author = 'Thomas Haverkamp'
    description = 'FullForcePlasmidAssembler: A python pipeline rewritten in Nextflow. The original pipeline can be found
		 							 here: https://github.com/MBHallgren/FullForcePlasmidAssembler'
    homePage = 'https://github.com/Thomieh73/FFPA_nextflow'
    nextflowVersion = '>=20.07.1.5412'
}

profiles {
    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
    }
    singularity {
        singularity.enabled = true
    }
		slurm {
			executor = 'slurm'
			clusterOptions = '--job-name=nepal --account=nn9305k --mem-per-cpu=4700M'
			queueSize = 24
			maxRetries = 1
			errorStrategy='retry'
		}
}





process {
		withName:'trimmomatic' {
			container = 'docker://fjukstad/trimmomatic'
			cpus = 8
			memory = 24.GB
		}
		withName:'qcat' {
			container = 'docker://mcfonsecalab/qcat'
			cpus = 8
			memory = 24.GB
		}
		withName:'nanoplot' {
			container = 'docker://nanozoo/nanoplot:1.32.0--1ae6f5d'
			cpus = 8
			memory = 24.GB
		}
		withName:'fastqc' {
			container = 'docker://nanozoo/fastqc'
			cpus = 8
			memory = 24.GB
		}
		withName:'nanofilt' {
			container = 'ocker://mcfonsecalab/nanofilt'
			cpus = 8
			memory = 24.GB
		}
		withName:'kraken' {
			container = 'docker://flowcraft/kraken:1.0-0.1'
			cpus = 8
			memory = 24.GB
		}
		withName:'unicycler' {
			container = 'docker://nanozoo/unicycler:0.4.7-0--c0404e6"'
			cpus = 8
			memory = 24.GB
		}
		withName:'abricate' {
			container = 'docker://replikation/abricate'
			cpus = 8
			memory = 24.GB
		}

####### OLD STUFF BELOW CLEAN _UP

	executor = 'slurm'
	clusterOptions = '--job-name=nepal --account=nn9305k --mem-per-cpu=4700M'
	queueSize = 24
	maxRetries = 1
	errorStrategy='retry'

	time = { 2.h * task.attempt }

	withLabel: tiny {
		cpus = { 1 * task.attempt}
		time = { 1.h * task.attempt}
	}

	withLabel: medium {
		cpus = { 8 * task.attempt}
		time = { 2.h * task.attempt}
	}

	withLabel: heavy {
		cpus = { 20 * task.attempt}
		time = { 12.h * task.attempt}
	}

    withLabel: gpu {
		cpus = 8
		time = { 12.h * task.attempt}
		clusterOptions = '--job-name=nepal_G --account=nn9305k --partition=accel --gres=gpu:2 --mem-per-cpu=8G'
	}

	withLabel: bigmem {
		cpus = 8
		time = { 8.h *task.attempt}
		clusterOptions = '--job-name=nepal_B --account=nn9305k --partition=bigmem --mem-per-cpu=32000M'
	}

	cpus = 4  // standard
	time = { 2.h * task.attempt }

	withLabel: longtime {
		time = { 24.h * task.attempt }
	}
}
